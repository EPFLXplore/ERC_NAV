<launch>

  <arg name="fake_cs_gamepad"    default="false"/>
  <arg name="motor_cmds"         default="true"/>
  
  <arg name="homing"             default="false"/>



  <!-- Launch the fake cs gamepad node -->
  <node if="$(var fake_cs_gamepad)" pkg="wheels_control" name="NAV_fake_cs_gamepad"  exec="fake_cs_gamepad.py" >
  </node>


  <!-- Launch the gamepad interface node -->
  <node pkg="wheels_control" name="NAV_gamepad_interface"  exec="NAV_gamepad_interface" >
  </node>

  <!-- Launch the cmd vel manager node -->
  <node pkg="wheels_control" name="NAV_cmd_vel_manager"  exec="NAV_cmd_vel_manager" >

  </node>


  <!-- Launch the node to compute motors displacements -->
  <node name="NAV_displacement_cmds" pkg="wheels_control" exec="NAV_displacement_cmds" >
  </node>


  <!-- Launch the node that manage the motors commands -->
  <node if="$(var motor_cmds)" name="NAV_motor_cmds" pkg="wheels_control" exec="NAV_motor_cmds" >
   <param name = "homing" value="$(var homing)"/>
  </node>




</launch>
